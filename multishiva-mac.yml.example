# MultiShiva Agent Configuration (macOS)
# Copy this to multishiva.yml on your Mac

version: 1
self_name: "mac-agent"
mode: agent
port: 53421

# Specify the Linux host address directly
host_address: "192.168.1.126:53421"

# TLS Pre-Shared Key - MUST be identical to the host
tls:
  psk: "change-this-to-a-secure-random-string"

# Optional: Hotkeys
hotkeys:
  focus_return: "Cmd+Alt+H"  # Return focus to host (Mac uses Cmd)
  kill_switch: "Cmd+Alt+K"   # Emergency stop

# Optional: Behavior tuning
behavior:
  reconnect_delay_ms: 5000
