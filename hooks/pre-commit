#!/bin/bash
# Pre-commit hook for code quality checks

set -e

echo "ğŸ” Running pre-commit checks..."

# Check formatting
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting issues found. Run 'cargo fmt --all' to fix."
    exit 1
fi
echo "âœ… Code formatting OK"

# Run clippy
echo "ğŸ”§ Running clippy linter..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues. Please fix them before committing."
    exit 1
fi
echo "âœ… Clippy checks passed"

# Optionally run tests (can be slow, comment out if needed)
# echo "ğŸ§ª Running tests..."
# if ! cargo test --quiet; then
#     echo "âŒ Tests failed. Please fix them before committing."
#     exit 1
# fi
# echo "âœ… Tests passed"

echo "âœ… All pre-commit checks passed!"
exit 0
